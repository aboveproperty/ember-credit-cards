<div class="clearfix">
  <div class="{{if numberValid 'has-success'}} form-group cc-number">
    <label class="control-label">{{if numberLabel numberLabel 'Card Number'}}</label>
    <InputCreditCardNumber @number={{number}} @class="form-control" />
  </div>

  <div class="{{if cvcValid 'has-success'}} form-group cc-cvc">
    <label class="control-label">{{if securityCodeLabel securityCodeLabel 'Security Code'}}</label>
    <InputCreditCardCvc @cvc={{cvc}} @class="form-control" />
  </div>
</div>

<div class="clearfix">
  <div class="{{if nameValid 'has-success'}} form-group cc-name">
    <label class="control-label">{{ if nameOnCardLabel nameOnCardLabel 'Name on Card'}}</label>
    <Input @type="text" @value={{name}} class="form-control" />
  </div>

  <div class="{{if expirationValid 'has-success'}} form-group cc-expiration">
    <label class="control-label">{{ if expirationLabel expirationLabel 'Expiration'}}</label>
    <InputCreditCardExpiration @month={{month}} @year={{year}} @class="form-control" />
  </div>
</div>

{{#if zipcodeRequired}}
  <div class="{{if zipcodeValid 'has-success'}} form-group cc-zipcode">
    <label class="control-label">{{ if zipCodeLabel zipCodeLabel 'Zip Code'}}</label>
    <InputCreditCardZipcode @zipcode={{zipcode}} @class="form-control" />
  </div>
{{/if}}


<div class="type">
  {{type}}
</div>
